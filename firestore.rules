rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the business
    function isBusinessOwner(businessId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerUid == request.auth.uid;
    }
    
    // Businesses collection
    match /businesses/{businessId} {
      // Allow reads for authenticated users who own the business
      // Also allow reads from server-side (no auth) - TEMPORARY for API routes
      // TODO: Use Firebase Admin SDK for proper server-side auth
      allow read: if isAuthenticated() && 
                     (resource == null || resource.data.ownerUid == request.auth.uid)
                  || request.auth == null; // TEMPORARY: Allow server-side reads
      
      // Allow queries to filter by ownerUid
      allow list: if isAuthenticated();
      
      // Users can create businesses (will set ownerUid to their uid)
      allow create: if isAuthenticated() && request.resource.data.ownerUid == request.auth.uid;
      
      // Users can update their own businesses
      allow update: if isBusinessOwner(businessId) && 
                       request.resource.data.ownerUid == resource.data.ownerUid;
      
      // Users can delete their own businesses
      allow delete: if isBusinessOwner(businessId);
      
      // Entities subcollection - allow server-side reads temporarily
      match /entities/{entityId} {
        allow read: if isBusinessOwner(businessId) || request.auth == null;
        allow write: if isBusinessOwner(businessId);
      }
      
      // Transactions subcollection - allow server-side reads temporarily
      match /transactions/{transactionId} {
        allow read: if isBusinessOwner(businessId) || request.auth == null;
        allow write: if isBusinessOwner(businessId);
      }
      
      // Config subcollection - allow server-side reads temporarily
      match /config/{configId} {
        allow read: if isBusinessOwner(businessId) || request.auth == null;
        allow write: if isBusinessOwner(businessId);
      }
      
      // MetricsDaily subcollection - allow server-side reads temporarily
      match /metricsDaily/{metricId} {
        allow read: if isBusinessOwner(businessId) || request.auth == null;
        allow write: if isBusinessOwner(businessId);
      }
    }
  }
}
