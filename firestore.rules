rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the business
    function isBusinessOwner(businessId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerUid == request.auth.uid;
    }
    
    // Businesses collection
    match /businesses/{businessId} {
      // Users can read their own businesses
      allow read: if isAuthenticated() && 
                     (resource == null || resource.data.ownerUid == request.auth.uid);
      
      // Allow queries to filter by ownerUid
      allow list: if isAuthenticated();
      
      // Users can create businesses (will set ownerUid to their uid)
      allow create: if isAuthenticated() && request.resource.data.ownerUid == request.auth.uid;
      
      // Users can update their own businesses
      allow update: if isBusinessOwner(businessId) && 
                       request.resource.data.ownerUid == resource.data.ownerUid;
      
      // Users can delete their own businesses
      allow delete: if isBusinessOwner(businessId);
      
      // Entities subcollection
      match /entities/{entityId} {
        allow read, write: if isBusinessOwner(businessId);
      }
      
      // Transactions subcollection
      match /transactions/{transactionId} {
        allow read, write: if isBusinessOwner(businessId);
      }
      
      // Config subcollection
      match /config/{configId} {
        allow read, write: if isBusinessOwner(businessId);
      }
      
      // MetricsDaily subcollection
      match /metricsDaily/{metricId} {
        allow read, write: if isBusinessOwner(businessId);
      }
    }
  }
}





